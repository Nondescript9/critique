<% layout('/layouts/boilerplate') %>

<div class="row my-5 row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-6 gx-3 gy-4">
  <% if(items.length) { %> <% for (let item of items) { %>
  <div class="col">
    <div class="card card-animate border-0 text-center">
      <a href="#"><img class="card-img-0 w-75 mb-2 shadow-sm" src="<%= item.images[1].url %>" alt="Album Cover" /></a>
      <p class="card-title small fw-medium"><%= item.name %></p>
      <p class="card-subtitle small fw-light"><%= item.artists[0].name %></p>
      <form class="justify-self-end align-self-center" action="/albums/search/<%= item.id %>" method="GET">
        <button class="btn btn-link" type="submit" style="font-size: 1.5rem; color: #917898"><i class="bi bi-plus-circle-fill"></i></button>
      </form>
    </div>
  </div>
  <% } %> <% } %>
  <a href="/albums" class="btn btn-link text-reset text-decoration-none"><i class="bi bi-caret-left-fill" style="font-size: 1.2rem; color: #a569bd"></i>Back to Index</a>
</div>
